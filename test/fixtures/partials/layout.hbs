<!doctype html>
<html lang="en-us">
<head>
	{{#block "head"}}
		<title>{{title}}</title>

		<link rel="stylesheet" href="assets/css/screen.css" />
	{{/block}}
</head>
<body>
	<div class="site">
		<div class="site-hd" role="banner">
			{{#block "header"}}
				<h1>{{title}}</h1>
			{{/block}}
		</div>

		{{#blockExists "body"}}
		<div class="site-bd" role="main">
			{{#block "body"}}
				<p>Lorem ipsum.</p>
			{{/block}}
		</div>
		{{/blockExists}}

		<div class="site-ft" role="contentinfo">
			{{#block "footer"}}
				<small>&copy; 1984</small>
			{{/block}}
		</div>
	</div>

	{{#block "foot"}}
		<script src="assets/js/controllers/home.js"></script>
	{{/block}}
</body>
</html>
